<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nawalpur Tourism</title>
    <link rel="icon" type="image/x-icon" href="https://res.cloudinary.com/dgdbgblvb/image/upload/v1726634760/Image_18-09-2024_at_10.29_am-removebg-preview_sppzzb.png">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/gallery.css">

    <!-- Montserrat Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cedarville+Cursive&family=Sacramento&display=swap" rel="stylesheet">
</head>
<body>

<!-- Include Navbar Partial -->
    <%- include('partials/navbar') %>


    <!-- Main Content Area -->
        <div class="gallery-page">
            <div class="gallery-image">
            <div class="quote">
                <h4>Gallery</h4>
            </div>  
            </div>
        </div>
        <br><p>

<h4><a href="/gallery/add">Add photos</a></h4>


<div class="gallery-section">
    <div class="gallery-container">
        <% gallerydetail.forEach((photo, index) => { %>
            <div class="gallery-item" 
                 data-imageurl="<%= photo.imageUrl %>" 
                 data-content="<%= photo.content %>" 
                 data-photoby="<%= photo.Photoby %>" 
                 onclick="openImage(<%= index %>)">
                <img src="<%= photo.imageUrl %>" alt="<%= photo.content %>">
                <p><%= photo.content %></p>
                <button type="submit" class="delete-button">
                    <a href="/gallery/<%= photo._id %>/edit" class="edit-button">Edit</a>
                </button>
                <form action="/gallery/<%= photo._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="delete-button">Delete</button>
                </form>
            </div>
        <% }) %>
    </div>
</div>

<!-- Full Page Image Modal -->
<div id="imageModal" class="modal">
    <span class="close" onclick="closeImage()">&times;</span>
    <img class="modal-content" id="fullImage">
    <div id="imageCaption" class="modal-caption"></div>
    <div id="photographerName" class="modal-caption photographer"></div>
</div>

    <!-- Include Footer Partial -->
    <%- include('partials/footer') %>

<script src="/js/gallery.js"></script>
<script src="/js/script.js"></script>

</body>
</html>